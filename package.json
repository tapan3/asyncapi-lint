{
  "name": "lint-asyncapi",
  "version": "1.0.1",
  "description": "GitHub action which lints AsyncAPI specification according to IKEA standards",
  "private": true,
  "main": "lib/main.js",
  "scripts": {
    "start": "ts-node src/main.ts",
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "author": "Raj Navakoti and Ilia Barchugov",
  "license": "MIT",
  "keywords": [
    "actions",
    "lint",
    "asyncapi"
  ],
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@stoplight/spectral-core": "^1.16.1",
    "@stoplight/spectral-formats": "^1.5.0",
    "@stoplight/spectral-functions": "^1.7.2",
    "@stoplight/spectral-ruleset-bundler": "^1.5.0",
    "ansi-styles": "5.2.0",
    "eslint-import-resolver-typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.9",
    "@typescript-eslint/parser": "^5.44.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.28.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^29.3.1",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "^3.2.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}